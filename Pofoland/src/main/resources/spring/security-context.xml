<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<!-- Security를 적용하지 않는 url 패턴 -->
	<http pattern="/login" security="none"></http>
	
	
	<http auto-config="true" access-denied-page="/loginFail">
		<!-- ROLE_USER 권한이 있어야 접근 가능 없을경우 access-denied-page 리다이렉트 -->
		<intercept-url pattern="/*" access="ROLE_USER" />
		
		<!-- 로그인 성공 / 실패  Handler -->
		<form-login login-page="/login"
					authentication-success-handler-ref="loginSuccessHandler"
					authentication-failure-handler-ref="logunFailHandler" />
		<logout logout-success-url="/" />
	</http>
	
	<!-- Handler 빈설정 -->
	<beans:bean id="loginSuccessHandler" class="com.hst.pofoland.common.auth.SecurityLoginSuccessHandler"></beans:bean>
	<beans:bean id="logunFailHandler" class="com.hst.pofoland.common.auth.SecurityLoginFailHandler"></beans:bean>
	
	<beans:bean id="userService" class="com.hst.pofoland.biz.user.UserService"></beans:bean>
	<!-- 기본으로 Security 제공 passwordEncoding :: SHA / MD5 해싱 이용 -->
	<beans:bean id="passwordEncoder" class="org.springframework.security.crypto.password.StandardPasswordEncoder"></beans:bean>
	
	
	<authentication-manager>
		<authentication-provider user-service-ref="userServie">
			<password-encoder ref="passwordEncoder" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>